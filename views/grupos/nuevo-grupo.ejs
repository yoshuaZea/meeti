<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina%></h1>

    <form action="/nuevo-grupo" method="post" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="text">Nombre del grupo</label>
            <input type="text" name="nombre" placeholder="Nombre del grupo">
        </div>
        <div class="campo descripcion">
            <label for="text">Descripción del grupo</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="text">Categoria</label>
            <select name="categoria">
                <option value="" selected disabled>Selecciona una categoría</option>
                <% categorias.forEach(cat => { %>
                    <option value="<%= cat.id %>"><%= cat.categoria %></option>
                <% }); %>
            </select>
        </div>
        <div class="campo">
            <label for="text">Imagen</label>
            <input type="file" name="imagen">
        </div>
        <div class="campo">
            <label for="text">Sitio web</label>
            <input type="url" name="url" placeholder="Nombre del grupo">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Crear grupo" class="btn btn-rosa">
        </div>
    </form>
</main>